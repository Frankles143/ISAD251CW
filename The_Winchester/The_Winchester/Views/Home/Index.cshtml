@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>


<body>
    <main class="page landing-page">
        <section class="clean-block clean-info dark">
            <div class="container">
                <div class="block-heading"></div>
                <div class="row align-items-center">
                    <div class="col-md-6"><img class="img-thumbnail" src="assets/img/amie-johnson-VJXLzQi5TlE-unsplash.jpg"></div>
                    <div class="col-md-6">
                        <h3>Welcome to the Winchester</h3>
                        <div class="getting-started-info">
                            <p>The Winchester is a completely ficticious pub that has been not actually running for more than 100 years! Come check out our imaginary food and drink, which reviewers I've made up have told us that it's revolutionary!</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="clean-block slider dark">
            <div class="container">
                <div class="block-heading" style="padding: 0px;"></div>
                <div class="carousel slide" data-ride="carousel" id="carousel-1">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item">
                            <img class="w-100 d-block" src="assets/img/lidye-1Shk_PkNkNw-unsplash.jpg" alt="Slide Image">
                            <div class="carousel-caption">
                                <h3 style="color: rgb(255,255,255);font-size: 36px;"><a asp-controller="Products" asp-action="FoodDrink" style="color: rgb(255,255,255);">Food</a></h3>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 d-block" src="assets/img/helena-yankovska-sJOy9pveFbU-unsplash.jpg" alt="Slide Image">
                            <div class="carousel-caption">
                                <h3 style="font-size: 36px;color: rgb(255,255,255);"><a asp-controller="Products" asp-action="FoodDrink" style="color: rgb(255,255,255);">Drink</a></h3>
                            </div>
                        </div>
                        <div class="carousel-item active">
                            <img class="w-100 d-block" src="assets/img/luca-bravo-8x_fFNrmeDk-unsplash.jpg" alt="Slide Image">
                            <div class="carousel-caption">
                                <h3 style="font-size: 36px;color: rgb(255,255,255);"><a asp-controller="Home" asp-action="AboutUs" style="color: rgb(255,255,255);">About Us</a></h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <!-- Start: Previous --><a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev"><span class="carousel-control-prev-icon"></span><span class="sr-only">Previous</span></a>
                        <!-- End: Previous -->
                        <!-- Start: Next --><a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next"><span class="carousel-control-next-icon"></span><span class="sr-only">Next</span></a>
                        <!-- End: Next -->
                    </div>
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-1" data-slide-to="0"></li>
                        <li data-target="#carousel-1" data-slide-to="1"></li>
                        <li data-target="#carousel-1" data-slide-to="2" class="active"></li>
                    </ol>
                </div>
            </div>
        </section>
    </main>
   
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/smoothproducts.min.js"></script>
    <script src="~/assets/js/theme.js"></script>
</body>

</html>