<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"] - The Winchester</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="~/assets/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="~/assets/css/smoothproducts.css">

    <nav class="navbar navbar-light navbar-expand-md border rounded-0 shadow clean-navbar" style="color: rgb(100,107,115);background-color: rgba(127,127,129,0.73);">
        <div class="container-fluid">
            <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">The Winchester</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-controller="Home" asp-action="FoodDrink">Food and drink</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-controller="Home" asp-action="UserOrder">Your order</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                </ul>
            </div><a asp-controller="Home" asp-action="ShoppingCart"><i class="fas fa-shopping-cart" style="font-size: 24px;color: rgb(0,0,0);"></i></a>
        </div>
    </nav>
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>




    <footer class="page-footer dark">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h5>Get started</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="FoodDrink">Food and Drink</a></li>
                        <li><a asp-controller="Home" asp-action="UserOrder">Your Order</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>About us</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="AboutUs">About us</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Legal</h5>
                    <ul>
                        <li></li>
                        <li></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a asp-controller="Home" asp-action="PictureCredits">Image Credits</a></li>
                    </ul>
                </div>
                <div class="col">
                    <h5>Admin</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="AdminLogin">Admin</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <p>© 2020 The Winchester</p>
        </div>
    </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>

